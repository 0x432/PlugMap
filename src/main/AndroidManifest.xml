<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlugMapUK"
        tools:targetApi="31">

        <!-- Settings Activity -->
        <activity
            android:name=".SettingsActivity"
            android:exported="true" /> <!-- Adjust android:exported as needed -->

        <!-- Maps Activity -->
        <activity
            android:name=".MapsActivity"
            android:exported="true"
            android:label="PlugMap">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Metadata and API Key -->
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/button_color" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCV5nmdpqI3nIZRokJVDOkB8df6n_qOYEs" />
    </application>

</manifest>
